extends layout 

block content
    h1= title

    form(method='POST' action='')
        div.form-group 
            label(for="name") Enter name: 
            input#name.form-control(type='text' placeholder='enter brand name' name='name' required='true' value=(brand === undefined ? '' : brand.name))

        button.btn.btn-primary(type='submit') Submit 

    if errors 
        ul 
            for error in errors 
                li #{error.msg}
